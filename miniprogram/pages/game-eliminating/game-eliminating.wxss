/* pages/game-eliminating/game-eliminating.wxss */
@import "../../styles/common.wxss";

.game-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: var(--spacing-md);
}

/* 游戏头部 */
.game-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: rgba(255, 255, 255, 0.1);
  border-radius: var(--radius-lg);
  padding: var(--spacing-md);
  margin-bottom: var(--spacing-lg);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.game-info {
  flex: 1;
}

.game-title {
  font-size: 20px;
  font-weight: 700;
  color: white;
  margin-bottom: var(--spacing-sm);
}

.game-stats {
  display: flex;
  gap: var(--spacing-lg);
}

.stat-item {
  text-align: center;
}

.stat-label {
  font-size: 12px;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: var(--spacing-xs);
}

.stat-value {
  font-size: 16px;
  font-weight: 600;
  color: white;
}

.game-controls {
  display: flex;
  gap: var(--spacing-sm);
}

/* 游戏棋盘 */
.game-board {
  display: flex;
  justify-content: center;
  margin-bottom: var(--spacing-lg);
}

.board-container {
  position: relative;
  background: rgba(255, 255, 255, 0.1);
  border-radius: var(--radius-lg);
  padding: var(--spacing-md);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.2);
  box-shadow: var(--shadow-lg);
}

.game-cell {
  position: absolute;
  border-radius: var(--radius-md);
  background: rgba(255, 255, 255, 0.9);
  border: 2px solid transparent;
  transition: all 0.3s ease;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: var(--shadow-sm);
}

.game-cell:hover {
  transform: scale(1.05);
  box-shadow: var(--shadow-md);
}

.game-cell.selected {
  border-color: var(--primary-color);
  background: rgba(99, 102, 241, 0.2);
  transform: scale(1.1);
}

.game-cell.eliminating {
  animation: eliminate 0.5s ease-out forwards;
}

@keyframes eliminate {
  0% { transform: scale(1); opacity: 1; }
  50% { transform: scale(1.2); opacity: 0.8; }
  100% { transform: scale(0); opacity: 0; }
}

.cell-content {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cell-icon {
  width: 80%;
  height: 80%;
  object-fit: contain;
}

.cell-effect {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.8) 0%, transparent 70%);
  border-radius: var(--radius-md);
  animation: sparkle 0.5s ease-out;
}

@keyframes sparkle {
  0% { opacity: 0; transform: scale(0.5); }
  50% { opacity: 1; transform: scale(1.2); }
  100% { opacity: 0; transform: scale(1.5); }
}

/* 游戏提示 */
.game-hints {
  text-align: center;
  margin-bottom: var(--spacing-lg);
}

.hint-text {
  background: rgba(255, 255, 255, 0.9);
  color: var(--text-primary);
  padding: var(--spacing-sm) var(--spacing-md);
  border-radius: var(--radius-lg);
  font-size: 14px;
  font-weight: 500;
  box-shadow: var(--shadow-sm);
  display: inline-block;
}

/* 特殊道具 */
.game-tools {
  background: rgba(255, 255, 255, 0.1);
  border-radius: var(--radius-lg);
  padding: var(--spacing-md);
  margin-bottom: var(--spacing-lg);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.tools-title {
  font-size: 16px;
  font-weight: 600;
  color: white;
  margin-bottom: var(--spacing-md);
  text-align: center;
}

.tools-list {
  display: flex;
  justify-content: space-around;
  gap: var(--spacing-sm);
}

.tool-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: var(--spacing-sm);
  background: rgba(255, 255, 255, 0.1);
  border-radius: var(--radius-md);
  border: 1px solid rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
  min-width: 80px;
}

.tool-item:hover {
  background: rgba(255, 255, 255, 0.2);
  transform: translateY(-2px);
}

.tool-icon {
  font-size: 24px;
  margin-bottom: var(--spacing-xs);
}

.tool-name {
  font-size: 12px;
  color: white;
  margin-bottom: var(--spacing-xs);
}

.tool-count {
  font-size: 14px;
  font-weight: 600;
  color: var(--secondary-color);
}

/* 结果弹窗 */
.result-modal {
  max-width: 400px;
  text-align: center;
}

.result-header {
  margin-bottom: var(--spacing-lg);
}

.result-title {
  font-size: 24px;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: var(--spacing-sm);
}

.result-subtitle {
  font-size: 16px;
  color: var(--text-secondary);
}

.result-stats {
  display: flex;
  justify-content: space-around;
  margin-bottom: var(--spacing-lg);
}

.result-stat {
  text-align: center;
}

.result-stat .stat-label {
  font-size: 12px;
  color: var(--text-secondary);
  margin-bottom: var(--spacing-xs);
}

.result-stat .stat-value {
  font-size: 18px;
  font-weight: 600;
  color: var(--text-primary);
}

.result-rewards {
  margin-bottom: var(--spacing-lg);
}

.rewards-title {
  font-size: 16px;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: var(--spacing-md);
}

.rewards-list {
  display: flex;
  justify-content: center;
  gap: var(--spacing-md);
  flex-wrap: wrap;
}

.reward-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: var(--spacing-sm);
  background: var(--bg-secondary);
  border-radius: var(--radius-md);
  min-width: 80px;
}

.reward-icon {
  font-size: 20px;
  margin-bottom: var(--spacing-xs);
}

.reward-name {
  font-size: 12px;
  color: var(--text-secondary);
  margin-bottom: var(--spacing-xs);
}

.reward-count {
  font-size: 14px;
  font-weight: 600;
  color: var(--success-color);
}

.result-actions {
  display: flex;
  gap: var(--spacing-md);
}

.result-actions .btn {
  flex: 1;
}

/* 暂停弹窗 */
.pause-modal {
  max-width: 300px;
  text-align: center;
}

.pause-header {
  margin-bottom: var(--spacing-lg);
}

.pause-title {
  font-size: 20px;
  font-weight: 600;
  color: var(--text-primary);
}

.pause-actions {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-sm);
}

/* 响应式设计 */
@media (max-width: 480px) {
  .game-container {
    padding: var(--spacing-sm);
  }
  
  .game-header {
    flex-direction: column;
    gap: var(--spacing-md);
  }
  
  .game-stats {
    gap: var(--spacing-md);
  }
  
  .game-controls {
    width: 100%;
    justify-content: center;
  }
  
  .tools-list {
    flex-direction: column;
    align-items: center;
  }
  
  .tool-item {
    width: 100%;
    max-width: 200px;
  }
  
  .result-stats {
    flex-direction: column;
    gap: var(--spacing-md);
  }
  
  .result-actions {
    flex-direction: column;
  }
}

@media (max-width: 320px) {
  .game-title {
    font-size: 18px;
  }
  
  .stat-value {
    font-size: 14px;
  }
  
  .tool-item {
    min-width: 60px;
  }
  
  .tool-icon {
    font-size: 20px;
  }
}
