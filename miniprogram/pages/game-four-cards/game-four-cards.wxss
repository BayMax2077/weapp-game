/* pages/game-four-cards/game-four-cards.wxss */
@import "../../styles/common.wxss";

.game-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #2c3e50 0%, #3498db 100%);
  padding: var(--spacing-md);
}

/* 游戏头部 */
.game-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: rgba(255, 255, 255, 0.1);
  border-radius: var(--radius-lg);
  padding: var(--spacing-md);
  margin-bottom: var(--spacing-lg);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.game-info {
  flex: 1;
}

.game-title {
  font-size: 20px;
  font-weight: 700;
  color: white;
  margin-bottom: var(--spacing-sm);
}

.room-info {
  font-size: 14px;
  color: rgba(255, 255, 255, 0.8);
}

.room-code {
  margin-bottom: var(--spacing-xs);
}

.current-player {
  font-weight: 500;
}

.game-controls {
  display: flex;
  gap: var(--spacing-sm);
}

/* 玩家信息 */
.players-info {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-sm);
  margin-bottom: var(--spacing-lg);
}

.player-card {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.1);
  border-radius: var(--radius-lg);
  padding: var(--spacing-md);
  transition: all 0.3s ease;
  border: 2px solid transparent;
}

.player-card.active {
  border-color: var(--primary-color);
  background: rgba(99, 102, 241, 0.2);
  transform: scale(1.02);
}

.player-avatar {
  margin-right: var(--spacing-md);
}

.player-avatar .avatar {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  border: 2px solid rgba(255, 255, 255, 0.3);
}

.player-info {
  flex: 1;
  min-width: 0;
}

.player-name {
  font-size: 16px;
  font-weight: 600;
  color: white;
  margin-bottom: var(--spacing-xs);
}

.player-stats {
  display: flex;
  gap: var(--spacing-md);
  font-size: 12px;
  color: rgba(255, 255, 255, 0.7);
}

.stat {
  display: flex;
  align-items: center;
}

.player-status {
  text-align: right;
}

.status-text {
  font-size: 14px;
  color: white;
  margin-bottom: var(--spacing-xs);
}

.timer {
  font-size: 12px;
  color: var(--warning-color);
  font-weight: 600;
}

/* 桌面区域 */
.desktop-area {
  background: rgba(255, 255, 255, 0.1);
  border-radius: var(--radius-lg);
  padding: var(--spacing-lg);
  margin-bottom: var(--spacing-lg);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.2);
  text-align: center;
}

.desktop-score {
  margin-bottom: var(--spacing-md);
}

.score-label {
  font-size: 14px;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: var(--spacing-xs);
}

.score-value {
  font-size: 24px;
  font-weight: 700;
  color: var(--secondary-color);
}

.desktop-cards {
  display: flex;
  justify-content: center;
  gap: var(--spacing-sm);
  flex-wrap: wrap;
  min-height: 80px;
}

/* 卡牌样式 */
.card {
  width: 60px;
  height: 84px;
  border-radius: var(--radius-md);
  background: white;
  border: 2px solid #ddd;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  cursor: pointer;
  position: relative;
  box-shadow: var(--shadow-sm);
}

.card:hover {
  transform: translateY(-4px);
  box-shadow: var(--shadow-md);
}

.card.selected {
  border-color: var(--primary-color);
  transform: translateY(-8px);
  box-shadow: var(--shadow-lg);
}

.card.disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.card.face-up {
  background: white;
}

.card.face-down {
  background: linear-gradient(135deg, #667eea, #764ba2);
}

.card-content {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-xs);
}

.card-suit {
  font-size: 16px;
  margin-bottom: var(--spacing-xs);
}

.card-rank {
  font-size: 14px;
  font-weight: 600;
}

.card-back {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.card-pattern {
  font-size: 24px;
  color: white;
}

/* 我的手牌 */
.my-cards {
  margin-bottom: var(--spacing-lg);
}

.cards-title {
  font-size: 16px;
  font-weight: 600;
  color: white;
  margin-bottom: var(--spacing-md);
  text-align: center;
}

.cards-container {
  display: flex;
  justify-content: center;
  gap: var(--spacing-sm);
  flex-wrap: wrap;
  min-height: 100px;
}

/* 操作按钮 */
.game-actions {
  display: flex;
  justify-content: center;
  gap: var(--spacing-md);
  margin-bottom: var(--spacing-lg);
}

.game-actions .btn {
  min-width: 120px;
}

/* 游戏提示 */
.game-hints {
  text-align: center;
  margin-bottom: var(--spacing-lg);
}

.hint-text {
  background: rgba(255, 255, 255, 0.9);
  color: var(--text-primary);
  padding: var(--spacing-sm) var(--spacing-md);
  border-radius: var(--radius-lg);
  font-size: 14px;
  font-weight: 500;
  box-shadow: var(--shadow-sm);
  display: inline-block;
}

/* 结果弹窗 */
.result-modal {
  max-width: 500px;
  text-align: center;
}

.result-header {
  margin-bottom: var(--spacing-lg);
}

.result-title {
  font-size: 24px;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: var(--spacing-sm);
}

.result-subtitle {
  font-size: 16px;
  color: var(--text-secondary);
}

.players-ranking {
  margin-bottom: var(--spacing-lg);
}

.ranking-item {
  display: flex;
  align-items: center;
  padding: var(--spacing-md);
  background: var(--bg-secondary);
  border-radius: var(--radius-lg);
  margin-bottom: var(--spacing-sm);
  transition: all 0.3s ease;
}

.ranking-item.winner {
  background: linear-gradient(135deg, var(--secondary-color), #fbbf24);
  color: white;
  transform: scale(1.02);
}

.ranking-number {
  width: 30px;
  height: 30px;
  border-radius: 50%;
  background: var(--primary-color);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 600;
  margin-right: var(--spacing-md);
}

.ranking-item.winner .ranking-number {
  background: white;
  color: var(--secondary-color);
}

.player-avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: var(--spacing-md);
}

.player-info {
  flex: 1;
  text-align: left;
}

.player-name {
  font-size: 16px;
  font-weight: 600;
  margin-bottom: var(--spacing-xs);
}

.player-score {
  font-size: 14px;
  color: var(--text-secondary);
}

.player-note-score {
  font-size: 14px;
  color: var(--text-secondary);
  font-weight: 500;
}

.game-stats {
  display: flex;
  justify-content: space-around;
  margin-bottom: var(--spacing-lg);
}

.stat-item {
  text-align: center;
}

.stat-label {
  font-size: 12px;
  color: var(--text-secondary);
  margin-bottom: var(--spacing-xs);
}

.stat-value {
  font-size: 18px;
  font-weight: 600;
  color: var(--text-primary);
}

.result-actions {
  display: flex;
  gap: var(--spacing-md);
}

.result-actions .btn {
  flex: 1;
}

/* 暂停弹窗 */
.pause-modal {
  max-width: 300px;
  text-align: center;
}

.pause-header {
  margin-bottom: var(--spacing-lg);
}

.pause-title {
  font-size: 20px;
  font-weight: 600;
  color: var(--text-primary);
}

.pause-actions {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-sm);
}

/* 响应式设计 */
@media (max-width: 480px) {
  .game-container {
    padding: var(--spacing-sm);
  }
  
  .game-header {
    flex-direction: column;
    gap: var(--spacing-md);
  }
  
  .game-controls {
    width: 100%;
    justify-content: center;
  }
  
  .player-card {
    flex-direction: column;
    text-align: center;
  }
  
  .player-avatar {
    margin-right: 0;
    margin-bottom: var(--spacing-sm);
  }
  
  .player-stats {
    flex-direction: column;
    gap: var(--spacing-xs);
  }
  
  .card {
    width: 50px;
    height: 70px;
  }
  
  .card-suit {
    font-size: 14px;
  }
  
  .card-rank {
    font-size: 12px;
  }
  
  .game-actions {
    flex-direction: column;
  }
  
  .result-actions {
    flex-direction: column;
  }
}

@media (max-width: 320px) {
  .game-title {
    font-size: 18px;
  }
  
  .player-name {
    font-size: 14px;
  }
  
  .card {
    width: 45px;
    height: 63px;
  }
  
  .card-suit {
    font-size: 12px;
  }
  
  .card-rank {
    font-size: 10px;
  }
}
