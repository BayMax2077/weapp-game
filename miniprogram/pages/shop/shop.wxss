/* pages/shop/shop.wxss */
@import "../../styles/common.wxss";

/* 资产卡片 */
.assets-card {
  background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
  color: white;
  border-radius: var(--radius-xl);
  padding: var(--spacing-lg);
  margin-bottom: var(--spacing-lg);
  box-shadow: var(--shadow-lg);
}

.assets-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-md);
}

.assets-title {
  font-size: 18px;
  font-weight: 600;
}

.assets-content {
  display: flex;
  gap: var(--spacing-lg);
}

.asset-item {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  flex: 1;
}

.asset-icon {
  font-size: 24px;
}

.asset-info {
  min-width: 0;
}

.asset-name {
  font-size: 12px;
  opacity: 0.8;
  margin-bottom: var(--spacing-xs);
}

.asset-value {
  font-size: 16px;
  font-weight: 600;
}

/* 分类导航 */
.category-nav {
  margin-bottom: var(--spacing-lg);
}

.category-scroll {
  white-space: nowrap;
}

.category-list {
  display: flex;
  gap: var(--spacing-sm);
  padding: 0 var(--spacing-md);
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: var(--spacing-md);
  background: var(--bg-primary);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-sm);
  border: 2px solid transparent;
  transition: all 0.3s ease;
  min-width: 80px;
  white-space: nowrap;
}

.category-item.active {
  border-color: var(--primary-color);
  background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
  color: white;
  transform: translateY(-2px);
  box-shadow: var(--shadow-md);
}

.category-icon {
  font-size: 24px;
  margin-bottom: var(--spacing-xs);
}

.category-name {
  font-size: 12px;
  font-weight: 500;
}

/* 商品列表 */
.products-section {
  margin-bottom: var(--spacing-xl);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-md);
}

.section-title {
  font-size: 18px;
  font-weight: 600;
  color: var(--text-primary);
}

.section-count {
  font-size: 14px;
  color: var(--text-secondary);
}

.products-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: var(--spacing-md);
}

.product-card {
  background: var(--bg-primary);
  border-radius: var(--radius-lg);
  overflow: hidden;
  box-shadow: var(--shadow-sm);
  border: 1px solid var(--border-color);
  transition: all 0.3s ease;
}

.product-card:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-md);
  border-color: var(--primary-color);
}

.product-image {
  position: relative;
  aspect-ratio: 1;
  overflow: hidden;
}

.product-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.product-badge {
  position: absolute;
  top: var(--spacing-sm);
  right: var(--spacing-sm);
  padding: var(--spacing-xs) var(--spacing-sm);
  border-radius: var(--radius-sm);
  font-size: 10px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  background: var(--error-color);
  color: white;
}

.product-badge.new {
  background: var(--success-color);
}

.product-info {
  padding: var(--spacing-md);
}

.product-name {
  font-size: 16px;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: var(--spacing-xs);
  line-height: 1.3;
}

.product-desc {
  font-size: 12px;
  color: var(--text-secondary);
  margin-bottom: var(--spacing-sm);
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.product-price {
  display: flex;
  align-items: baseline;
  gap: var(--spacing-xs);
  margin-bottom: var(--spacing-md);
}

.price-main {
  font-size: 18px;
  font-weight: 700;
  color: var(--primary-color);
}

.price-unit {
  font-size: 12px;
  color: var(--text-secondary);
}

.product-actions {
  margin-top: var(--spacing-sm);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: var(--spacing-2xl) var(--spacing-lg);
  text-align: center;
}

.empty-icon {
  width: 120px;
  height: 120px;
  opacity: 0.6;
  margin-bottom: var(--spacing-lg);
}

.empty-text {
  font-size: 18px;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: var(--spacing-sm);
}

.empty-desc {
  font-size: 14px;
  color: var(--text-secondary);
}

/* 商品详情模态框 */
.product-detail-modal {
  max-width: 500px;
  max-height: 80vh;
}

.modal-body {
  padding: 0;
  max-height: 60vh;
  overflow-y: auto;
}

.product-detail-image {
  aspect-ratio: 16/9;
  overflow: hidden;
}

.detail-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.product-detail-info {
  padding: var(--spacing-lg);
}

.detail-name {
  font-size: 20px;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: var(--spacing-sm);
}

.detail-desc {
  font-size: 14px;
  color: var(--text-secondary);
  line-height: 1.6;
  margin-bottom: var(--spacing-lg);
}

.detail-price {
  display: flex;
  align-items: baseline;
  gap: var(--spacing-sm);
  margin-bottom: var(--spacing-lg);
}

.detail-price .price-main {
  font-size: 24px;
  font-weight: 700;
  color: var(--primary-color);
}

.detail-price .price-unit {
  font-size: 14px;
  color: var(--text-secondary);
}

.detail-features {
  margin-bottom: var(--spacing-lg);
}

.feature-title {
  font-size: 16px;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: var(--spacing-sm);
}

.feature-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-xs);
}

.feature-item {
  font-size: 14px;
  color: var(--text-secondary);
  line-height: 1.5;
}

.modal-footer {
  display: flex;
  gap: var(--spacing-md);
  padding: var(--spacing-lg);
  border-top: 1px solid var(--border-color);
}

.modal-footer .btn {
  flex: 1;
}

/* 响应式设计 */
@media (max-width: 480px) {
  .assets-content {
    flex-direction: column;
    gap: var(--spacing-md);
  }
  
  .asset-item {
    justify-content: space-between;
  }
  
  .products-grid {
    grid-template-columns: 1fr;
  }
  
  .product-card {
    display: flex;
    flex-direction: row;
  }
  
  .product-image {
    width: 120px;
    aspect-ratio: 1;
    flex-shrink: 0;
  }
  
  .product-info {
    flex: 1;
    padding: var(--spacing-sm);
  }
  
  .product-name {
    font-size: 14px;
  }
  
  .product-desc {
    font-size: 11px;
  }
  
  .price-main {
    font-size: 16px;
  }
  
  .category-item {
    min-width: 60px;
    padding: var(--spacing-sm);
  }
  
  .category-icon {
    font-size: 20px;
  }
  
  .category-name {
    font-size: 10px;
  }
}

@media (max-width: 320px) {
  .assets-content {
    gap: var(--spacing-sm);
  }
  
  .asset-item {
    flex-direction: column;
    text-align: center;
  }
  
  .product-image {
    width: 100px;
  }
  
  .product-info {
    padding: var(--spacing-xs);
  }
  
  .product-name {
    font-size: 12px;
  }
  
  .product-desc {
    font-size: 10px;
  }
  
  .price-main {
    font-size: 14px;
  }
}